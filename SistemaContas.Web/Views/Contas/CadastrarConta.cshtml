@model SistemaContas.Core.Dominio.Entidades.Conta

@{
    ViewBag.Title = "CadastrarConta";
}


<h2>Nova Conta</h2>

@using (Html.BeginForm("CadastrarConta", "Contas", FormMethod.Post, new { @id="frm_cadastroContas"}))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.TipoOperacao, "Tipo de Operação:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <label>Crédito @Html.RadioButtonFor(x => x.TipoOperacao, "Crédito", new { @id = "radio_tipoOperacao1", @name = "radio_credito", @required = "required" })</label>
                    <label>Débito @Html.RadioButtonFor(x => x.TipoOperacao, "Débito", new { @id = "radio_tipoOperacao2", @name = "radio_debito" })</label>
                </div>
            </div>
            <hr />
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.CredorOuDevedor, "Devedor:", htmlAttributes: new { @class = "control-label col-md-2", @id="lbl_CredorDevedor"})
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.CredorOuDevedor, new { @class = "col-md-10 form-control", id = "txtCredorOuDevedor", @required = "required", @maxlength = "40", @autofocus = "true" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Descricao, "Descrição:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Descricao, new { @class = "col-md-10 form-control", id = "txtDescricao", @required = "required", @maxlength = "200", @autofocus = "true" })

                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ValorConta, "Valor (R$):", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.ValorConta, new { @class = "col-md-10 form-control", id = "txtValorConta", @required = "required", @autofocus = "true" })
                    <span id="verificadorValor" class="control-label col-md-2"></span>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DataVencimento, "Data: ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.DataVencimento, htmlAttributes: new { @class = "col-md-10 form-control datepicker", @id = "txtDataVencimento", @maxlength = "10", @required = "required", @autofocus = "true" })
                    <span id="verificadorData" class="control-label col-md-2"></span>

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-default tool" data-toggle="tooltip" data-placement="right" title="Salvar">
                        <span class="glyphicon glyphicon-floppy-saved"></span>
                    </button>
                </div>
            </div>
        </div>
}

<div>
    @Html.ActionLink("Voltar ao início", "Index")
</div>

@section Scripts{
    <script>

        $(document).ready(function () {
            $('.tool').tooltip();

            $('#txtDataVencimento').datepicker({
                language: 'pt-BR',
                endDate: '+1y',
                format: 'dd/mm/yyyy',
                todayHighlight:true

            });
        });
        $(document).ready(function () {
            $("#txtValorConta").keydown(function (event) {
                if (event.keyCode == 46 || event.keyCode == 8 || event.keyCode == 9 || event.keyCode == 27 || event.keyCode == 13 ||
                    (event.keyCode == 65 && event.ctrlKey === true) ||
                    (event.keyCode == 67 && event.ctrlKey === true) ||
                    (event.keyCode == 88 && event.ctrlKey === true) ||
                    (event.keyCode == 86 && event.ctrlKey === true) ||
                    (event.keyCode == 65 && event.metaKey === true) ||
                    (event.keyCode == 67 && event.metaKey === true) ||
                    (event.keyCode == 88 && event.metaKey === true) ||
                    (event.keyCode == 86 && event.metaKey === true) ||
                    (event.keyCode >= 35 && event.keyCode <= 39)) {
                    return;
                }
                else {
                    if (event.shiftKey || (event.keyCode < 48 || event.keyCode > 57) && (event.keyCode < 96 || event.keyCode > 105)) {
                        $('#verificadorValor').html('Somente números').show().fadeOut('slow');
                        event.preventDefault();
                    }

                }
            });
        });

        $(document).ready(function () {
            $("#txtDataVencimento").keydown(function (event) {
                if (event.keyCode == 46 || event.keyCode == 8 || event.keyCode == 9 || event.keyCode == 27 || event.keyCode == 13 ||
                    (event.keyCode == 65 && event.ctrlKey === true) ||
                    (event.keyCode == 67 && event.ctrlKey === true) ||
                    (event.keyCode == 88 && event.ctrlKey === true) ||
                    (event.keyCode == 86 && event.ctrlKey === true) ||
                    (event.keyCode == 65 && event.metaKey === true) ||
                    (event.keyCode == 67 && event.metaKey === true) ||
                    (event.keyCode == 88 && event.metaKey === true) ||
                    (event.keyCode == 86 && event.metaKey === true) ||
                    (event.keyCode >= 35 && event.keyCode <= 39)) {
                    return;
                }
                else {
                    if (event.shiftKey || (event.keyCode < 48 || event.keyCode > 57) && (event.keyCode < 96 || event.keyCode > 105)) {
                        $('#verificadorData').html('Somente números').show().fadeOut('slow');
                        event.preventDefault();
                    }

                }
            });
        });

        $(document).ready(function () {
            $('#radio_tipoOperacao1').attr('checked', true);

            $('input[name=TipoOperacao]').click(function () {
                var rbvalue = $(this).val();
                if(rbvalue == "Crédito"){
                    $('#lbl_CredorDevedor').html("Devedor:");
                }
                else{
                    $('#lbl_CredorDevedor').html("Credor:");
                }
            });
        });
        

    </script>

<script src="~/Scripts/jquery.moneymask.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#txtValorConta').maskMoney({
                decimal: ',',
                thousands:''
            });
        });
    </script>

<script src="~/Scripts/jquery.mask.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#txtDataVencimento').mask('00/00/0000');
        });
    </script>
}
