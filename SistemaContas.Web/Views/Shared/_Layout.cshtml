<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Projeto Sistema Contas MVC</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    
    
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
        @if (User.Identity.IsAuthenticated) 
        {
            <div class="navbar-header">
                <a href="~/Contas/Index" class="navbar-brand">Início</a>
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" id="navbar-main">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="Contas">Contas <span class="caret"></span></a>
                        <ul class="dropdown-menu" aria-labelledby="themes">
                            <li><a href="~/Contas/CadastrarConta">Cadastro</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="Contas">Pendências<span class="caret"></span></a>
                        <ul class="dropdown-menu" aria-labelledby="themes">
                            <li><a href="~/Pendencias/SemTratativa">Em aberto</a></li>
                            <li><a href="~/Pendencias/EmAndamento">Em andamento</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="Contas">Relatórios <span class="caret"></span></a>
                        <ul class="dropdown-menu" aria-labelledby="themes">
                            <li><a href="~/Relatorios/ContasFinalizadas">Lista de contas finalizadas</a></li>
                            <li><a href="~/Relatorios/Extrato">Extrato</a></li>
                        </ul>
                    </li>   
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="Contas">Perfil <span class="caret"></span></a>
                        <ul class="dropdown-menu" aria-labelledby="themes">
                            <li><a href="~/Perfil/Detalhes">Detalhes</a></li>
                            <li><a href="~/Perfil/AlterarSenha">Alterar Senha</a></li>
                        </ul>
                    </li>
                    <li><a href="~/Acesso/Logout">Sair</a></li>
                </ul>
            </div>
            
        }
        else
        {
            <div class="navbar-header">
                <a href="~/Acesso/Login" class="navbar-brand">Acesso</a>
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
        }
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="margin-bottom:100px;">
            <p>&copy; @DateTime.Now.Year - Projeto MVC - Sistema Contas</p>
        </footer>    
    </div>
    
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    
    

</body>
</html>
