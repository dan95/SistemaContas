@{
    ViewBag.Title = "Extrato";
    if (ViewBag.Pdf != null) { 
    Layout = null;
    }
}

    
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        <style>
        .form-group{margin-top:100px !important;}body{margin-left:50px;}.form-horizontal{margin-top:50px;width:100%;margin-bottom:100px;}.total-extrato{width:100%;}th{width:25% !important;}td{width:25% !important;}h2{margin-top:100px !    important;margin-left:20%;}button{margin-top:50px;}
        .table-debitos{margin-top:50px;}.div-extratos{margin-bottom:65px;margin-top:65px;}h4{font-size:20px;}
        button{width:100px !important;}
        </style>
    <h2>Extrato</h2>

    @using (Html.BeginForm("ExtratoPDF", "Relatorios", FormMethod.Post, new { @id = "frm_extrato", @class = "form-horizontal" }))
    {
        <div class="div-extratos">
            <h4>Créditos</h4>
            <div class="panel panel-default">
                <table class="table">
                    <tr>
                        <th>
                            Devedor
                        </th>
                        <th>
                            Descrição
                        </th>
                        <th>
                            Data
                        </th>
                        <th>
                            Valor
                        </th>
                        
                    </tr>
                    @if (ViewBag.Historico != null)
                    {
                        foreach (var item in ViewBag.Historico)
                        {
                            if (item.TipoTransacao == "Crédito")
                            {
                                <tr>
                                    <td>
                                        @item.Conta.CredorOuDevedor
                                    </td>
                                    <td>
                                        @item.Conta.Descricao
                                    </td>

                                    <td>
                                        @item.DataTransacao.ToString("dd/MM/yyyy")
                                    </td>
                                    <td>
                                        @item.ValorTransacao.ToString("R$ 0.00")
                                    </td>
                                </tr>
                            }
                        }
                    }
                </table>
            </div>
        </div>


        <div class="div-extratos">
            <h4>Débitos</h4>
            <div class="panel panel-default">
                <table class="table">
                    <tr>
                        <th>
                            Credor
                        </th>
                        <th>
                            Descrição
                        </th>
                        <th>
                            Data
                        </th>
                        <th>
                            Valor
                        </th>
                    </tr>
                    @if (ViewBag.Historico != null)
                    {
                        foreach (var item in ViewBag.Historico)
                        {
                            if (item.TipoTransacao == "Débito")
                            {
                                <tr>
                                    <td>
                                        @item.Conta.CredorOuDevedor
                                    </td>
                                    <td>
                                        @item.Conta.Descricao
                                    </td>

                                    <td>
                                        @item.DataTransacao.ToString("dd/MM/yyyy")
                                    </td>
                                    <td>
                                        @item.ValorTransacao.ToString("R$ 0.00")
                                    </td>
                                </tr>
                            }
                        }
                    }
                </table>
            </div>
        </div>

        <div class="total-extrato">
            <div class="panel panel-default">
                <table class="table">
                    <tr>
                        <td>
                            <strong>SUBTOTAL CRÉDITO:</strong>
                        </td>
                        <td></td>
                        <td></td>
                        <td>
                            @ViewBag.OperacoesCredito.ToString("R$ 0.00")
                        </td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="total-extrato">
            <div class="panel panel-default">
                <table class="table">
                    <tr>
                        <td>
                            <strong>SUBTOTAL DÉBITO:</strong>
                        </td>
                        <td></td>
                        <td></td>
                        <td>
                            @ViewBag.OperacoesDebito.ToString("R$ 0.00")
                        </td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="total-extrato">
            <div class="panel panel-default">
                <table class="table">
                    <tr>
                        <td>
                            <strong>TOTAL:</strong>
                        </td>
                        <td></td>
                        <td></td>
                        <td>
                            @ViewBag.Total.ToString("R$ 0.00")
                        </td>
                    </tr>
                </table>
            </div>
        </div>

        if (ViewBag.Pdf == null)
        {
            <div class="form-group">
                <button type="submit" id="btn_gerarExtrato" class="btn btn-default tool" data-toggle="tooltip" data-placement="right" title="Gerar documento PDF">
                    <span class=" glyphicon glyphicon-export">
                    </span>
                </button>
            </div>
        }

        <div class="form-group">
            @if (ViewBag.Pdf == null)
            {
                @Html.ActionLink("Voltar ao Início", "Index", "Contas")
            }
        </div>
    }
    @section Scripts{
        <script>
            $(document).ready(function () {
                $('.tool').tooltip();
            });
            $('#btn_gerarExtrato').click(function () {
                $('#frm_extrato').submit();
            });
        </script>
    }
    
    @if (ViewBag.Pdf != null) 
    { 
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
    }